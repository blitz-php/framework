{
    "name": "blitz-php/framework",
    "type": "library",
    "description": "The Blitz framework core",
    "keywords": ["framework", "blitz php", "flash", "rapid"],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/blitz-php/framework/issues",
        "source": "https://github.com/blitz-php/framework"
    },
    "authors": [
        {
            "name": "Dimitri Sitchet Tomkeu",
            "email": "devcode.dst@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "adhocore/cli": "^1.6",
        "blitz-php/annotations": "^1.0",
        "blitz-php/autoloader": "^1.0",
        "blitz-php/cache": "^1.2",
        "blitz-php/filesystem": "^1.0",
        "blitz-php/session": "^1.0",
        "blitz-php/traits": "^1.3",
        "dflydev/dot-access-data": "^3.0.1",
        "dimtrovich/validation": "^1.0",
        "guzzlehttp/psr7": "^2.2",
        "jawira/case-converter": "^3.5",
        "kint-php/kint": "^5.0.1",
        "mirazmac/php-requirements-checker": "^0.2.0",
        "monolog/monolog": "^2.6",
        "nette/schema": "^1.2",
        "php-di/php-di": "^6.3 || ^7.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "blitz-php/coding-standard": "^1.1",
        "phpstan/phpstan": "^1.4.7",
        "scrutinizer/ocular": "^1.8.1",
        "kahlan/kahlan": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "BlitzPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlitzPHP\\Spec\\": "spec/_support/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyse",
        "test": "kahlan",
        "test-coverage": "kahlan --coverage=3 --reporter=verbose --clover=clover.xml",
        "cs": "php-cs-fixer fix --ansi --verbose --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --ansi --verbose --diff"
    },
    "scripts-descriptions": {
        "analyze": "Lance l'analyse statique du code du framework",
        "test": "Execute les tests unitaires",
        "cs": "VÃ©rifie les normes de codage",
        "cs-fix": "Fix the coding style"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "suggest": {
        "ext-ftp": "Required to use the Flysystem FTP driver.",
        "fakerphp/faker": "Required to make seed of database (^1.9.1).",
        "filp/whoops": "Required for friendly error pages in development (^2.14.3)."
    },
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
