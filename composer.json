{
    "name": "blitz-php/utilities",
    "type": "library",
    "description": "Classes utilitaires PHP principalement utilisées pour Blitz PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitri Sitchet Tomkeu",
            "email": "devcode.dst@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
	    "blitz-php/contracts": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "BlitzPHP\\Utilities\\": ""
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
	"suggest": {
        "firebase/php-jwt": "Réquis pour la gestion des token JWT via le helper `\\BlitzPHP\\Utilities\\Jwt`",
		"jawira/case-converter": "Réquis pour la convertion des chaîne de caractère via le helper `\\BlitzPHP\\Utilities\\Str`"
    },
    "support": {
        "issues": "https://github.com/blitz-php/utilities/issues",
        "source": "https://github.com/blitz-php/utilities"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
